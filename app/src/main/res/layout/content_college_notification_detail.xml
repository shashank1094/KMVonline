<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="es.esy.shashanksingh.kmvonline.CollegeNotificationDetail"
    tools:showIn="@layout/college_notification_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            tools:text="Heading"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:padding="20dp"
            android:textIsSelectable="true"
            tools:text="The college will remain close from this month as we are not in support of AAp party foolish people dont know anything."/>
        <TextView
            android:id="@+id/detailTeacherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:paddingRight="20dp"
            android:gravity="end"
            android:textIsSelectable="true"
            android:textColor="@android:color/black"
            tools:text="Teacher's Name"/>
        <TextView
            android:id="@+id/detailDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingBottom="30dp"
            android:paddingRight="20dp"
            android:textAlignment="textEnd"
            android:textIsSelectable="true"
            tools:text="Department"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
